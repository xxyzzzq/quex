define {
	HEXDIGIT    [0-9A-Fa-f]
	h16         {HEXDIGIT}{1,4}
	decoctet    [:digit:]
	IPv4address ({decoctet}[.]{decoctet}[.]{decoctet}[.]{decoctet})
	ls32        (({h16}":"{h16})|{IPv4address})
	IPv6address	(({h16}":"){0,4}{h16})?"::"{ls32}
}

token { 
    OK;
}

start = ONE_AND_ONLY;

mode ONE_AND_ONLY
{
	<<EOF>>			=> QUEX_TKN_TERMINATION;
	{IPv6address}	=> QUEX_TKN_OK;
}

token { 
    WORD;
    FAILURE;
    NEWLINE;
}

mode X :
<indentation: >
<skip: [ \t]>
{
    on_indent { self_send(QUEX_TKN_NEWLINE);             self_send(QUEX_TKN_INDENT); }
    on_dedent { if( First ) self_send(QUEX_TKN_NEWLINE); self_send(QUEX_TKN_DEDENT); }
    on_nodent { self_send(QUEX_TKN_NEWLINE);                                         }

    [a-z]+ => QUEX_TKN_WORD(Lexeme);
}

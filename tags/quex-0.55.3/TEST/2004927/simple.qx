start = ONE_AND_ONLY;

define {
    P_EXPRESSION ([A-Za-z_]*[+\-]+[A-Za-z_]*)+
    P_THING [:alnum:]+
}

token {
EXPRESSION;
NONE;
THING;
}

mode ONE_AND_ONLY
{
// Order is relevant
<<EOF>> => QUEX_TKN_TERMINATION;

[ \t\r\n]+ { }
{P_THING}      => QUEX_TKN_THING(Lexeme);
{P_EXPRESSION} => QUEX_TKN_EXPRESSION(Lexeme); // quex loops
.              => QUEX_TKN_NONE(Lexeme);
}

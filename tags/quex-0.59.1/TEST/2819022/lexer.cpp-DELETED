#include<fstream>    
#include<iostream> 

// (*) include lexical analyser header
#include <./Simple>

using namespace std;

int 
main(int argc, char** argv) 
{        
    quex::Token*   token_p;
    quex::Simple   qlex(argv[1]);

    do {
        qlex.receive(&token_p);

        cout << *token_p << endl;

    } while( token_p->type_id() != QUEX_TKN_TERMINATION );

    return 0;
}

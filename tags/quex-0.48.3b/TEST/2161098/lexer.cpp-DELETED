#include<fstream>    
#include<iostream> 

#include <./Simple>

using namespace std;

int 
main(int argc, char** argv) 
{        
    // we want to have error outputs in stdout, so that the unit test could see it.
    quex::Token*  token_p;
    quex::Simple  qlex(argc == 1 ? "example.txt" : argv[1]);

    cout << "## An Assert-Abortion might be an intended element of the experiment.\n";
    token_p = qlex.token_p();
    do {
        (void)qlex.receive();
        cout << qlex.line_number() << ", " << qlex.column_number() << ": " << string(*token_p) << endl;
    } while( token_p->type_id() != COL_TERMINATION );
    

    return 0;
}


start = ONE_AND_ONLY;

define {
  P_TOK       [A-Za-z0-9]+
}

token {
  TOK
  NONE
}

mode ONE_AND_ONLY
{
  // Order is relevant
  on_end_of_stream => QUEX_TKN_TERMINATION;
  on_failure     { std::cerr << "unknown character: " << *Lexeme << std::endl; }
  [ \t\r\n]+  { }

  {P_TOK}        => QUEX_TKN_TOK(Lexeme);
  .              => QUEX_TKN_NONE(Lexeme);
}

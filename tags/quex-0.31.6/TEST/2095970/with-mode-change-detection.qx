// This file implements a lexer while relying on the internal ability of the 
// lexer to detect mode changes and re-dive into analysis when a mode change has
// been detected.
token {
   STRING_LITERAL
}

start = MODULE

mode MODULE {
    <<EOF>> => TKN_TERMINATION;
    "\"" { self << STRING; }
}

mode STRING {
    on_entry { self.accumulator.clear(); }
    on_exit {
       self.accumulator.flush(TKN_STRING_LITERAL);
    }
    <<EOF>> => TKN_TERMINATION;
    "\"" { 
        self << MODULE; 
#       if ! defined(QUEX_OPTION_TOKEN_SENDING_VIA_QUEUE)
        return self.the_token.type_id();  // type_id is set by on_exit
#       endif
    }
    .    { self.accumulator.add(Lexeme); }
}

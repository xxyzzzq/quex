<project>
    <shortName>quex</shortName>
    <fullName>Quex</fullName>
    <version>$$VERSION$$</version>
    <readmeFile>$$QUEX_PATH$$/README</readmeFile>
    <licenseFile>$$QUEX_PATH$$/LGPL.txt</licenseFile>
    <splashImage>$$QUEX_PATH$$/adm/logo/quex-logo.png</splashImage>
    <compressionAlgorithm>lzma</compressionAlgorithm>
    <enableRollback>1</enableRollback>
    <saveRelativePaths>1</saveRelativePaths>
    <registerWithPackageDatabase>1</registerWithPackageDatabase>
    <componentList>
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall ${product_fullname}</name>
                            <path>${installdir}</path>
                            <platforms>all</platforms>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesOSX</name>
                    <platforms>osx</platforms>
                    <actionList>
                        <addEnvironmentVariable>
                            <name>QUEX_PATH</name>
                            <scope>system</scope>
                            <value>${installdir}/${product_shortname}-${product_version}/</value>
                        </addEnvironmentVariable>
                        <addDirectoryToPath>
                            <path>${installdir}</path>
                        </addDirectoryToPath>
                        <createSymLink>
                            <linkName>/${installdir}/quex</linkName>
                            <target>${installdir}/${product_shortname}-${product_version}/quex-exe.py</target>
                        </createSymLink>
                        <changePermissions>
                            <files>/${installdir}/quex</files>
                            <permissions>755</permissions>
                        </changePermissions>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>$$DISTRIBUTION_ROOT_DIR$$</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileslinux</name>
                    <platforms>linux</platforms>
                    <actionList>
                        <addEnvironmentVariable>
                            <name>QUEX_PATH</name>
                            <scope>system</scope>
                            <value>${installdir}/${product_shortname}-${product_version}/</value>
                        </addEnvironmentVariable>
                        <addDirectoryToPath>
                            <path>${installdir}/${product_shortname}-${product_version}/</path>
                        </addDirectoryToPath>
                        <createSymLink>
                            <linkName>/usr/local/bin/quex</linkName>
                            <target>${installdir}/${product_shortname}-${product_version}/quex-exe.py</target>
                        </createSymLink>
                        <changePermissions>
                            <files>/usr/local/bin/quex</files>
                            <permissions>755</permissions>
                        </changePermissions>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>$$DISTRIBUTION_ROOT_DIR$$</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <actionList>
                        <addEnvironmentVariable>
                            <name>QUEX_PATH</name>
                            <scope>system</scope>
                            <value>${installdir}/${product_shortname}-${product_version}/</value>
                        </addEnvironmentVariable>
                        <addDirectoryToPath>
                            <scope>system</scope>
                            <path>${installdir}</path>
                        </addDirectoryToPath>
                        <copyFile>
                            <destination>${installdir}/quex.bat</destination>
                            <origin>${installdir}/${product_shortname}-${product_version}/quex.bat</origin>
                        </copyFile>
                    </actionList>
                    <distributionFileList>
                        <distributionDirectory>
                            <origin>$$DISTRIBUTION_ROOT_DIR$$</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall ${product_fullname}</comment>
                    <name>Uninstall ${product_fullname}</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/uninstall.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <preUninstallationActionList>
        <deleteFile>
            <path>${installdir}/quex.bat</path>
        </deleteFile>
    </preUninstallationActionList>
    <enableTimestamp>1</enableTimestamp>
    <saveRelativePaths>1</saveRelativePaths>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value>${platform_install_prefix}/${product_shortname}</value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <ask>yes</ask>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>yes</mustBeWritable>
            <mustExist>0</mustExist>
            <width>30</width>
        </directoryParameter>
    </parameterList>
</project>


// -*- C++ -*- vim:set syntax=cpp:
#ifndef __INCLUDE_GUARD__QUEX_LEXER_CLASS_ACCUMULATOR
#define __INCLUDE_GUARD__QUEX_LEXER_CLASS_ACCUMULATOR

namespace quex { 

    // (*) pure text accumulation and flushing
    struct Accumulator {
        Accumulator() { _accumulated_text.reserve(1024); }

        void  flush(const QUEX_TYPE_TOKEN_ID TokenID);
        void  clear();
        void  add(const QUEX_TYPE_CHARACTER*);
        void  add(const QUEX_TYPE_CHARACTER);

    private:
        friend class CLASS;
#    ifdef QUEX_OPTION_LINE_NUMBER_COUNTING
        int  _begin_line;
#    endif
#    ifdef QUEX_OPTION_COLUMN_NUMBER_COUNTING
        int  _begin_column;
#    endif
        std::basic_string<QUEX_TYPE_CHARACTER>  _accumulated_text;
        CLASS*                                  _the_lexer;     
    };

}
#endif // __INCLUDE_GUARD__QUEX_LEXER_CLASS_ACCUMULATOR

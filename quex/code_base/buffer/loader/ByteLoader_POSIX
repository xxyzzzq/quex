#ifndef QUEX_INCLUDE_GUARD_BYTE_LOADER_POSIX
#define QUEX_INCLUDE_GUARD_BYTE_LOADER_POSIX

#include <quex/code_base/buffer/loader/ByteLoader>
#ifdef __cplusplus
extern "C" {
#endif

#include <fcntl.h>  /* POSIX file handling. */
#include <unistd.h> /* POSIX file handling. */

#ifdef __cplusplus
}
#endif

typedef struct { 
    ByteLoader  base;
    int         fd;
} ByteLoader_POSIX;

QUEX_INLINE ByteLoader*    ByteLoader_POSIX_new(int fd);
QUEX_INLINE ByteLoader*    ByteLoader_POSIX_new_from_file_name(const char*);

#endif /* QUEX_INCLUDE_GUARD_BYTE_LOADER_POSIX */


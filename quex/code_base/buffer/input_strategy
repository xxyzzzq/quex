#ifndef __INCLUDE_GUARD__QUEX_BUFFER_INPUT_STRATEGY__
#define __INCLUDE_GUARD__QUEX_BUFFER_INPUT_STRATEGY__

namespace quex {

    template <CharacterCarrierType>  // CharacterCarrierType = uin8_t, uint16_t, uint32_t, ...
    struct input_strategy { 
        // PURPOSE: The 'input_strategy' provides the illusion of a continous character
        //          stream consisting of characters coded all with the same byte-width.
        //          It hides coding/uncoding and differing character sizes.
        long     tell_character_index() = 0;
        void     seek_character_index(const long Index) = 0;
        void     close() = 0;
        void     destroy_handle() = 0;

        size_t   read_characters(CharacterCarrierType* start_of_buffer, const size_t N)  
        long     register_begin_of_file() = 0;
    };

}

#endif // __INCLUDE_GUARD__QUEX_BUFFER_INPUT_STRATEGY__

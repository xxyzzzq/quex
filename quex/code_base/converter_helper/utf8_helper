#ifndef __QUEX_INCLUDE_GUARD__UTF8_HELPER
#define __QUEX_INCLUDE_GUARD__UTF8_HELPER
/* -*- C++ -*- vim: set syntax=cpp:
 *
 * (C) 2005-2010 Frank-Rene Schaefer                                                */

QUEX_NAMESPACE_MAIN_OPEN

#if ! defined(__QUEX_OPTION_WCHAR_T_DISABLED)
QUEX_INLINE void
/* DrainEnd pointer is not returned, since the increment is always '1' */
QUEX_NAME(utf8_to_wchar)(const QUEX_TYPE_CHARACTER** input,
                         __QUEX_STD_wchar_t**        output);

QUEX_INLINE void
QUEX_NAME(utf8_to_wchar_string)(const QUEX_TYPE_CHARACTER** Source, 
                                const QUEX_TYPE_CHARACTER*  SourceEnd, 
                                __QUEX_STD_wchar_t**        Drain,
                                __QUEX_STD_wchar_t*         DrainEnd);

#if ! defined(__QUEX_OPTION_PLAIN_C)
QUEX_INLINE std::wstring
QUEX_NAME(utf8_to_wstring)(const std::basic_string<QUEX_TYPE_CHARACTER>& Source);
#endif 

#endif

QUEX_NAMESPACE_MAIN_CLOSE

#endif /* __QUEX_INCLUDE_GUARD__UTF8_HELPER */

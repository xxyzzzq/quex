#ifndef __INCLUDE_GUARD__QUEX__INDENTATION_STACK
#define __INCLUDE_GUARD__QUEX__INDENTATION_STACK

    typedef struct {
        uint16_t   begin[QUEX_SETTING_INDENTATION_STACK_SIZE];
        uint16_t*  end;
        uint16_t*  memory_end;

        /* Indentation detection may be turned on or off */
        size_t     count;           /* number of columns to first non-whitespace  */
        /*                           * in the current line.                       */
        bool       count_enabled_f; /* count whitespace for indentation?          */
        bool       event_enabled_f; /* trigger when first non-whitespace occurs?  */
    } QUEX_NAME(IndentationHandler);

    uint16_t  QUEX_NAME(IndentationHandler_allow)(QUEX_NAME(IndentationHandler)* me);
    uint16_t  QUEX_NAME(IndentationHandler_disallow)(QUEX_NAME(IndentationHandler)* me);

    void      QUEX_NAME(IndentationHandler_enable)(QUEX_NAME(IndentationHandler)* me);
    void      QUEX_NAME(IndentationHandler_disable)(QUEX_NAME(IndentationHandler)* me);

    void      QUEX_NAME(IndentationHandler_on_indentation)(QUEX_TYPE_ANALYZER*  me, 
                                                           const size_t         Indentation);

#endif /* __INCLUDE_GUARD__QUEX__INDENTATION_STACK */

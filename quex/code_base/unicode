#ifndef __QUEX_INCLUDE_GUARD__UNICODE
#define __QUEX_INCLUDE_GUARD__UNICODE

#include <quex/code_base/definitions>

QUEX_NAMESPACE_MAIN_OPEN

    QUEX_INLINE uint8_t*
    QUEX_NAME(unicode_to_utf8)(QUEX_TYPE_CHARACTER  UCS_CharacterCode, 
                               uint8_t*             utf8_result);

    QUEX_INLINE uint8_t*
    QUEX_NAME(unicode_to_utf8_string)(QUEX_TYPE_CHARACTER* Source, 
                                      size_t               SourceSize, 
                                      uint8_t*             Drain, 
                                      size_t               DrainSize);

QUEX_NAMESPACE_MAIN_CLOSE

#endif /* __QUEX_INCLUDE_GUARD__UNICODE */

#    define MINIMAL_ANALYZER_TYPE         QuexAnalyserMinimal
#    define STREAM_POSITION_TYPE(IH_TYPE) long
#    define STREAM_OFFSET_TYPE(IH_TYPE)   long

#    define CharacterCarrierType   QUEX_CHARACTER_TYPE  

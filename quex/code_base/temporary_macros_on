#    define MINIMAL_ANALYZER_TYPE         quex::QuexAnalyserMinimal<CharacterCarrierType>
#    define STREAM_POSITION_TYPE(IH_TYPE) typename InputPolicy<IH_TYPE*>::stream_position
#    define STREAM_OFFSET_TYPE(IH_TYPE)   typename InputPolicy<IH_TYPE*>::stream_offset


#    define SizeOfCharacter       quex::QuexBufferFiller_Plain<InputHandleType, CharacterCarrierType>::SizeOfCharacter_tag

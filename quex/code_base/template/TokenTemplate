#endif

#define QUEX_TYPE_TOKEN                    $$TOKEN_TYPE_WITH_NAMESPACE$$
#define QUEX_TYPE_TOKEN_WITHOUT_NAMESPACE  $$TOKEN_TYPE$$

class $$TOKEN_TYPE$$ {
    $$TOKEN_TYPE$$();
    $$TOKEN_TYPE$$(const $$TOKEN_TYPE$$& That)           { __copy(That); }     
    $$TOKEN_TYPE$$ operator=(const $$TOKEN_TYPE$$& That) { __copy(That); }     
    ~$$TOKEN_TYPE$$();

$$MEMBER_DEFINITION$$
$$CONSTRUCTOR_DECLARATIONS$$
$$SET_FUNCTION_DECLARATIONSS$$

    private:
        QUEX_TYPE_TOKEN_ID    _id;
    public:
        QUEX_TYPE_TOKEN_ID    type_id() const      { return _id; }
        const std::string&    type_id_name() const { return map_id_to_name(_id); }

#   ifdef     QUEX_OPTION_TOKEN_STAMPING_WITH_LINE_AND_COLUMN
#       ifdef QUEX_OPTION_LINE_NUMBER_COUNTING
    private:
        $$LINE_N_TYPE$$  _line_n;
    public:
        $$LINE_N_TYPE$$  line_number() const                 { return _line_n; }
        void    set_line_number(const $$LINE_N_TYPE$$ Value) { _line_n = Value; }
#       endif
#       ifdef  QUEX_OPTION_COLUMN_NUMBER_COUNTING
    private:
        $$COLUMN_N_TYPE$$  _column_n;
    public:
        $$COLUMN_N_TYPE$$  column_number() const                 { return _column_n; }
        void    set_column_number(const $$COLUMN_N_TYPE$$ Value) { _column_n = Value; }
#       endif
#   endif
};

$$CONSTRUCTORS$$
$$SET_FUNCTIONS$$

#endif /* __INCLUDE_GUARD__QUEX__TOKEN__$$TOKEN_TYPE_WITHOUT_NAMESPACE$$__ */

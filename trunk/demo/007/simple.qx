// -*- C++ -*- vim: set syntax=cpp:
start = DERIVED

mode BASE :
<inheritable: only>  
{    
    <<EOF>> {
        self.send(quex::token::ID_TERMINATION);
        RETURN;
    }
    " "         {}
    "some"      => QUEX_TKN_SOME;
    [a-zA-Z]+   => QUEX_TKN_IDENTIFIER(Lexeme);
    "more"      => QUEX_TKN_MORE;
    "things"    => QUEX_TKN_THINGS;
}


mode DERIVED : BASE
{
    "things"  DELETION

    "read"     => QUEX_TKN_READ;
    [a-zA-Z]+  PRIORITY-MARK
    "write"    => QUEX_TKN_WRITE;
}


// -*- C++ -*-

mode ONE_AND_ONLY
{
    <<EOF>>   => TKN_TERMINATION;

    [a-z]{1,3}       => TKN_MINI_WORD(Lexeme);
    hey/hey          => TKN_HEY_____HEY(Lexeme);
    hey+/hey         => TKN_HEY_P___HEY(Lexeme);
    hey/(hey|hallo)+ => TKN_HEY_____HEY_HALLO_P(Lexeme);
    hey+/(he[y]?)+   => TKN_HEY_P___HEY_P(Lexeme);
    heyhey           => TKN_HEY_HEY(Lexeme);
    [ \n]+     { }
}




token {
  GOOD;
  FAILURE;
}

start = BEGIN;

mode BASE : <inheritable: only> {
    on_failure => QUEX_TKN_FAILURE(Lexeme);
}

mode BEGIN : BASE {
    ([a]|[^a])0 => QUEX_TKN_GOOD(Lexeme);
}

mode MIDDLE : BASE {
    0([a]|[^a])0 => QUEX_TKN_GOOD(Lexeme);
}

mode END : BASE {
    ([^a]|[a]){1,3} => QUEX_TKN_GOOD(Lexeme);
}

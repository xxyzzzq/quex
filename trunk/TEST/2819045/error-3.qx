token {
    WORD;
    LASTWORD;
    SENTBOUND;
    OTHER;
}

define {
    WORDCHAR     [A-Z]
    ALLWCHAR     {WORDCHAR}|[.]
    USTARTCNT    GIM/M|LEM/M
    LSTARTCNT    [Gg]im/me|[Ll]em/me
    STARTCNT     {USTARTCNT}|{LSTARTCNT}
    WORD         {ALLWCHAR}+|{STARTCNT}
}

mode standard :
<skip: [ \t\r]>
{
   a+a/a+$ => QUEX_TKN_WORD(Lexeme);
  {WORD}   => QUEX_TKN_WORD(Lexeme);
}
